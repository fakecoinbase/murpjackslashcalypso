{
  "manifest_version": 2,
  "name": "Crypto-balance",
  "version": "0.1",
   "permissions": [
     "declarativeContent",
     "storage"
   ],
   "browser_action": {
    "default_popup": "extension.html",
    "default_icon": "./images/32/color/btc.png"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "src/myscript.js"
    ]
  }],
  "background": {
    "scripts": [
      "src/background.js"
    ]
  }

}
