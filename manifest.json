{
  "manifest_version": 2,
  "name": "Crypto-balance",
  "version": "0.1",
   "permissions": [
     "declarativeContent",
     "storage"
   ],
   "browser_action": {
    "default_popup": "extension.html",
    "default_icon": "node_modules/cryptocurrency-icons/32/color/btc.png"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "myscript.js"
    ]
  }],
  "background": {
    "scripts": [
      "background.js"
    ]
  }

}
