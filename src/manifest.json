{
  "manifest_version": 2,
  "name": "Crypto-balance",
  "version": "1.0.0",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "browser_action": {
    "default_popup": "extension.html",
    "default_icon": "images/logo-favicon-tablet.png"
  },
  "permissions": ["activeTab"],
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "./bundle.js"
    ]
  }]

}
