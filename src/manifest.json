{
  "manifest_version": 2,
  "name": "Crypto-balance",
  "version": "0.1",
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "permissions": [
    "declarativeContent",
    "storage"
  ],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "images/32/color/btc.png"
  },
  "content_scripts": [{
    "matches": [
      "http://*/*",
      "https://*/*"
    ],
    "js": [
      "scripts/myscript.js",
      "scripts/my-helper-module.js",
      "scripts/app.js"

    ]
  }],
  "background": {
    "scripts": [
      "scripts/background.js"
    ]
  }

}
